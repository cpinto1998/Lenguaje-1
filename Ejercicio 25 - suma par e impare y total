#include <iostream>

using namespace std;

int main(int argc, char const *argv[])
{
    int pares = 0, impares = 0, total = 0;

    for (int i = 1; i <= 10; i++)
    {
        if (i % 2 == 0) {
            pares = pares + i;
        }
        cout << i << " ";
    }
    
    for (int a = 1; a <= 10; a+=2)
    {
     
            impares = impares + a;
    }
    total = pares + impares;
    cout << endl;
    cout << endl;
    cout << "Total pares: " << pares;
    cout << endl;
    cout << "Total impares: " << impares;
    cout << endl;
    cout << "Total: " << total;
    return 0;
}
